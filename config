# https://git-scm.com/docs/git-config

[alias]
  ada = "add --all"
  br = "branch"
  cl = "clone"
  co = "checkout"
  st = "status --short"

  re = "reset"
  re1 = "reset 'HEAD^'"
  reH = "reset --hard"

  logs = "log"
  ls = "log --oneline"

  ci = "commit"
  cia = "commit --amend"
  cian = "commit --amend --no-edit"

  rb = "rebase"
  rbi = "rebase --interactive"
  rba = "rebase --abort"
  rbc = "rebase --continue"

  search = "log -S"

[user]
  email = "louis.vinchon.dev@gmail.com"
  name = "Louis VINCHON"

[init]
  defaultBranch = main

[pager]
  branch = false
  color = no ; Nvim doesn't like the terminal colors escape sequences.
  log = "nvim -R +'set ft=git nomodifiable'"
  diff = "nvim -Rd +'set nomodifiable'"

[push]
  default = current
	autoSetupRemote = true

